@model ProductProperty
<div class="col d-flex justify-content-between">
    <div class="form-group">
        <input asp-for="@Model.Name" class="form-control"></input>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="@Model.MeasureUnit" class="form-control"></input>
        <span asp-validation-for="@Model.MeasureUnit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="@Model.Value" class="form-control"></input>
        <span asp-validation-for="@Model.Value" class="text-danger"></span>
    </div>
</div>