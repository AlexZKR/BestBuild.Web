@model Product

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="~/Images/Products/@Model.ImagePath"
                            class="img-responsive">
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Описание продукта</h4>
                    <p>@Model.Description</p>
                    <h2 class="mt-5">
                        @Model.DiscountedPrice <small class="text-success">(-@Model.DiscountSize)</small>
                    </h2>
                    <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title=""
                        data-original-title="Add to cart">
                        <i class="fa fa-shopping-cart"></i>
                    </button>
                    <button class="btn btn-primary btn-rounded">Купить сейчас</button>
                    @* <h3 class="box-title mt-5">Основные характеристики</h3> *@
                    <ul class="list-unstyled">
                        <li><a href=""><i class="fa-solid fa-truck"></i> Бесплатная доставка</a></li>
                        <li><a href=""><i class="fa-solid fa-box"></i> Самовывоз</a></li>
                        <li><a href=""><i class="fa fa-check text-success"></i> Выгодная доставка</a></li>
                    </ul>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">Характеристики</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                @foreach (var item in @Model.Properties)
                                {
                                    <tr>
                                        <td width="390">
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Value @item.MeasureUnit
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
